@model Auction_Picture.Models.Account
@{
    ViewData["Title"] = "Reset Password";

}
<div class="row justify-content-md-center">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                Reset Password
            </div>
            <div class="card-body">
                @using (Html.BeginForm("ResetPassword", "Home", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        @Html.LabelFor(m => m.OTP)
                        @Html.TextBoxFor(m => m.OTP, new { @class = "form-control", @placeholder = "Enter OTP" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password)
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Enter new password" })
                    </div>
                    @if (ViewBag.error != null)
                    {
                        <span class="badge text-danger">@ViewBag.error</span>
                    }
                    <div class="form-group">
                        <input type="submit" name="submit" class="btn btn-primary" value="Reset Password"/>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
